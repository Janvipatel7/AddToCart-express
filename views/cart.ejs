<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add To Cart</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.css">
</head>

<body>

    <%- include('./partials/header.ejs') %>

        <section class="bg-cart">
            <div class="container">
                <div class="text-center">
                    <h1 class="cart-title">Shopping Cart</h1>
                </div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center bread-cart">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cart</li>
                    </ol>
                </nav>
            </div>
        </section>


        <section class="py-5">
            <div class="container">
                <div class="row gy-4">

                    <div class="text-center mb-4 d-none" id="emptyimg">
                        <img
                            src="https://img.freepik.com/free-vector/supermarket-shopping-cart-concept-illustration_114360-22408.jpg">
                        <p class="fw-semibold fs-5">Your Cart is currently Empty!!!!</p>
                        <button class="btn-shop" onclick="window.location='/'">Go To Shop</button>
                    </div>

                    <div class="col-lg-9 col-12 px-3">

                        <div class="border d-md-block d-none">
                            <div class="row gy-4">
                                <div id="emptytable">
                                    <div class="row height-60 fw-bold fs-5 px-3">
                                        <div class="col-6">
                                            <div class="border-end height-100 d-flex align-items-center">Product</div>
                                        </div>
                                        <div class="col-2">
                                            <div
                                                class="border-end height-100 d-flex align-items-center justify-content-center">
                                                Price</div>
                                        </div>
                                        <div class="col-2">
                                            <div
                                                class="border-end height-100 d-flex align-items-center justify-content-center">
                                                Quantity</div>
                                        </div>
                                        <div class="col-2">
                                            <div class="height-100 d-flex align-items-center justify-content-center">
                                                Subtotal</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="border fw-medium product-card" id="cartItems"></div>

                    </div>

                    <div class="col-lg-3 col-12" id="emptycard">
                        <div class="card" id="bill"></div>
                        <div class="pt-4 text-end">
                            <button class="clear-btn" onclick="removeAll()">Clear All</button>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <script src="/assets/js/cart.js"></script>
        <script src="/assets/js/bootstrap.min.js"></script>

</body>

</html>